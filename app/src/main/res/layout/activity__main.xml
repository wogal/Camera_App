<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="----"
    android:textSize="50dp"
    android:gravity="center"
    android:id="@+id/textview_top"
    />


    <Button
        android:layout_below="@id/textview_top"
    android:layout_margin="20dp"
    android:background="@drawable/bg_btn_login_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/button_login"
    android:textColor="@color/button_login_txt_colour"
    android:textSize="@dimen/but_login_txt_size"
    android:text="@string/login_text"
    />

    <Button
        android:layout_below="@id/button_login"
        android:layout_margin="20dp"
        android:background="@drawable/bg_btn_login_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_camrea"
        android:textColor="@color/button_login_txt_colour"
        android:textSize="@dimen/but_login_txt_size"
        android:text="@string/camera_text"
        />
    <Button
        android:layout_below="@id/button_camrea"
        android:layout_margin="20dp"
        android:background="@drawable/bg_btn_login_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_testCode"
        android:textColor="@color/button_login_txt_colour"
        android:textSize="@dimen/but_login_txt_size"
        android:text="Test Code"
        />


    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_drops"
        android:layout_below="@id/button_camrea"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

    <ImageView

        android:layout_below="@id/button_testCode"
        android:contentDescription="---"
        android:id="@+id/capturePhotoImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />


    <TextureView
        android:visibility="gone"
        android:layout_below="@id/button_testCode"
        android:contentDescription="---"
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true" />


</RelativeLayout>
