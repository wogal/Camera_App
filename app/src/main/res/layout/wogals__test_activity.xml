<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wogals__test_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.egs.wogal.camera_app.Wogals_Test_Activity">
    <TextView
        android:gravity="center"
        android:id="@+id/text_top"
        android:text="Hi wogal"
        android:textSize="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Exit"
        android:textSize="40dp"
        android:textColor="#283593"
        android:layout_width="match_parent"
        android:id="@+id/button_text_activity_exit"
        android:layout_below="@+id/text_top"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/carsListView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/button_text_activity_exit"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_below="@id/carsListView"
        android:gravity="center"
        android:id="@+id/bot_text"
        android:textColor="#E91E63"
        android:text="Hi Earle"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
